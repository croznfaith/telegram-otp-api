{
  "version": 2,
  "builds": [
    { "src": "api/**/*.php", "use": "@vercel/php" },
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "bot.js", "use": "@vercel/node" },
    { "src": "index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/webhook", "dest": "/bot.js" },
    { "src": "/", "dest": "/index.html" }
  ],
  "functions": {
    "api/**/*.php": {
      "runtime": "@vercel/php@0.7.0"
    }
  }
}
